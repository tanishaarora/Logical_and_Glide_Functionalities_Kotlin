<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kotlinexample.listsorting">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinExample">

        <activity android:name="com.kotlinexample.viewpager.ViewPagerActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name="com.kotlinexample.imageList.FullScreenView"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name="com.kotlinexample.imageList.ImageListActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name="com.kotlinexample.displayedimages.ImageActivity"
            android:exported="false" />

        <activity android:name="com.kotlinexample.spinners.DropDownActivity"
            android:exported="false" />
        <activity
            android:name="com.kotlinexample.listsorting.Details"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.kotlinexample.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>
</manifest>